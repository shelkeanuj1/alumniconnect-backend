{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": [
    "server.ts",
    "controllers",
    "routes",
    "models",
    "config"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}